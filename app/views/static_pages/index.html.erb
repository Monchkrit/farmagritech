<div class="container-fluid">
  <div class="container">
        <div class="row justify-content-center">
        <%= image_tag "FAT-Logo.png", height: "128", width: "250", class:"rounded mx-auto d-block" %>
        </div>
  </div>
  <div class="row align-items-start">
    <div class="col-md-2 home-nav-box">
      <ul class="list-group list-group-flush">
        <li class="list-group-item list-group-item">
          <%= link_to 'Product View', listings_path, class: 'btn btn-info' %>
        </li>
        <li class="list-group-item list-group-item">
          <%= link_to 'Garden View', gardener_gardens_path, class: 'btn btn-info' %>
        </li>          
        <li class="list-group-item list-group-item">
          <%= link_to "About Us", pages_about_path, class: 'btn btn-info' %>
        </li>
        <li class="list-group-item list-group-item">
          <%= link_to "Contact Us", pages_contact_path, class: 'btn btn-info' %>
        </li>
      </ul>
    </div>
    <div class="row">
      <div class="col-4 pic-box">
        <figure class="figure">
          <%= image_tag "artichoke-plant-lo.jpg", class:'img-fluid' %>
          <figcaption class="figure-caption text-right">Local Garden Picture</figcaption>
        </figure>
      </div>
      <div class="col-4 pic-box">
        <figure class="figure">
          <%= image_tag "strawberry plants.jpg", class:'img-fluid' %>
          <figcaption class="figure-caption text-right">Local Farm Picture</figcaption>
        </figure>
      </div>
    </div>
    <div class="container text-center">
      <div class="row">
        <p class="h2">If you are interested in using Plantform please view the PlantForm introduction video here: 
          <%= link_to "PlantForm Introduction", "https://youtu.be/Lrv7PZ--SaU" %>
        </p>
      </div>
      <p class="strong">The app used to be called Plantform, so do not be confused by the graphics in the video. All functionality remains the same.</p>
    </div>
  </div>
</div>
