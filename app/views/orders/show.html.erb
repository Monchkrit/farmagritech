<p class="display-4 center">Your Current Order</p>
<div class="container-fluid">
  <table class="table table-hover">
    <thead class="thead-dark">
      <th class="center">Image</th>
      <th>Reserve Here</th>
      <th class="center">Item</th>
      <th class="center">Price</th>
      <th class="center">Farmer's Name</th>
      <th>Pickup Address</th>
      <th class="center">Contact Number</th>
    </tr>
    <tr>
      <td class="center"><%= image_tag @order.listing.picture.url, class:"img-thumbnail  align-top" %></td>
      <td><%= link_to "Reserve", purchases_path, class:"btn btn-primary" %></td>
      <td class="center align-top"><%= @order.listing.name %></td>
      <td class="center  align-top">
        <p><%= number_to_currency(@order.listing.price) %>
          <% if @listing.description != "Monitor" && @listing.description != "Docking Station" %>
           + FAT IT and Microsoft Licenses<% end %></p>
        <p><%= @order.listing.price_in_btc %> Sats
          <% if @listing.description != "Monitor" && @listing.description != "Docking Station" %>
           + FAT IT and Microsoft Licenses<% end %></p>
      </td>
      <td class="center  align-top"><%= @order.farmer.first_name %> <%= @order.farmer.last_name %></td>
      <% @listing = Listing.find_by_id(@order.listing_id) %>
      <td class="align-top"><%= @listing.street %><br />
        <%= @order.listing.city %>, <%= @order.listing.state %><br />
        <%= @listing.zipcode %><br />
      </td>
      <td class="center  align-top"><%= @listing.telephone %><br />
            
    </tr>
  </table>
</div>
