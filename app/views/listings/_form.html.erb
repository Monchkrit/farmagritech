<div class="container-fluid">
  <div class="row form-box">  
    <div class="col">
      <%= form_with model: @listing, url: listing_path do |f| %>
        <p class="lead pt-2"><%= f.label :name, "Name" %><%= f.text_field :name %></p>
        <p class="lead"><%= f.label :description, "Describe Product" %><%= f.text_field :description %></p>
        <% if @admin %>
          <p class="lead"><%= f.label :product_type, "Type of Product" %>
            <%= f.select(:product_type, [['FAT PC'], ['Vegetable'], ['Herb'], ['Fruit'], ['Flowers'], ['House Plant'], ['Outdoor Plant'], ['Tree']]) %></p>
        <% else %>
          <p class="lead"><%= f.label :product_type, "Type of Product" %>
            <%= f.select(:product_type, [['Vegetable'], ['Herb'], ['Fruit'], ['Flowers'], ['House Plant'], ['Outdoor Plant'], ['Tree']]) %></p>
        <% end %>
        <p class="lead"><%= f.label :weight, "Pounds or Units" %><%= f.number_field :weight %></p>
        <p class="lead"><%= f.label :market_date, "Date of Sale" %><%= f.datetime_select :market_date, start_year: 2019 %></p>
        <p class="lead"><%= f.label :price, "Fees are applied." %></p>
        <p class="lead"><%= f.label :price, "Remember to reset this value or the fees will compound" %><%= f.text_field :price %></p>
        <p class="lead"><%= f.label :maxorder, "Total number of orders" %><%= f.number_field :maxorder %>
        <p class="lead">Please enter the location of sale</p>
        <p class="lead"><%= f.label :street, "Street" %><%= f.text_field :street %></p>
        <p class="lead"><%= f.label :city, "City" %><%= f.text_field :city %></p>
        <p class="lead"><%= f.label :state, "State" %><%= f.text_field :state %></p>
        <p class="lead"><%= f.label :zipcode, "Zipcode" %><%= f.text_field :zipcode %></p>
        <p class="lead">Contact Number or E-Mail address </p>        
        <p class="lead"><%= f.text_field :telephone %></p>
        <p class="lead"><%= f.label :picture, "Product Picture" %></p>
        <p class="lead pb-2"><%= f.file_field :picture %></p>
        <%= f.submit :submit, class: "btn btn-primary mb-2" %>
      <% end %>
    </div>
  </div>
</div>
